<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="gameShowList" CanUserAddRows="False" RowHeaderWidth="0" Margin="10,10,90,10" CanUserSortColumns="False"/>
        <Button Content="添加" Margin="0,10,10,0" Click="addGame_button" HorizontalAlignment="Right" Width="75" Height="19" VerticalAlignment="Top"/>
        <Button Content="删除" Margin="0,34,10,0" Click="deleteGame_button" HorizontalAlignment="Right" Width="75" Height="19" VerticalAlignment="Top"/>
        <Button Content="启动" Margin="0,58,10,0" Click="startGame_button" HorizontalAlignment="Right" Width="75" Height="19" VerticalAlignment="Top"/>
    </Grid>
</Window>
